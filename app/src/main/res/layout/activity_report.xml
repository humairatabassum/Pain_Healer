<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CCEF8"
    android:orientation="vertical"
    tools:context=".ReportActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Prescription"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Medicine 1 :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/etMedi1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="6"
                android:inputType="textPersonName" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Time period :"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/timePeriod1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dose :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/etQuantity1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="1"
                android:inputType="numberSigned" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Consumption Time:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <CheckBox
                android:id="@+id/rdMorning1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Morning" />

            <CheckBox
                android:id="@+id/rdNoon1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Noon" />

            <CheckBox
                android:id="@+id/rdNight1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Night" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Medicine 1 :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/etMedi2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="6"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Time period :"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/timePeriod2"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dose :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/etQuantity2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="1.5"
                android:inputType="numberSigned" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Consumption Time:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <CheckBox
                android:id="@+id/rdMorning2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Morning" />

            <CheckBox
                android:id="@+id/rdNoon2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Noon" />

            <CheckBox
                android:id="@+id/rdNight2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Night" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Suggestion :"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/etSuggestion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:inputType="text"
                android:maxLines="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Test :"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/etTest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:inputType="text"
                android:maxLines="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Date &amp; Time :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/DateTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:inputType="datetime" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#40A2F4"
            android:text="Cancel"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/PostBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#40A2F4"
            android:text="Post"

            android:layout_marginRight="5dp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>