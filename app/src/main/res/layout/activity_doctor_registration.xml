<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".doctorRegistration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RelPart1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/round_shape"
            android:backgroundTint="#E4E7F8"
            android:padding="10dp">

            <TextView
                android:id="@+id/smlText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Doctor's Registration"
                android:textSize="24dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/RelPart1">

            <Spinner
                android:id="@+id/spTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Title"
                android:background="@drawable/button_shape"
                android:entries="@array/title"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spTitle"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Name"
                android:background="@drawable/button_shape"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etName"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Applicants must be over 18"
                android:background="@drawable/button_shape"
                android:hint="Date Of Birth"
                android:inputType="date"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/GenderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Gender"
                android:background="@drawable/button_shape"
                android:entries="@array/gender"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/Nid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/GenderSpinner"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Nid"
                android:background="@drawable/button_shape"
                android:hint="Nid"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/registrationNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Nid"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Registration Number (BMDC)"
                android:background="@drawable/button_shape"
                android:hint="Registration Number (BMDC)"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/doctorType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/registrationNum"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="Registration Number (BMDC)"
                android:background="@drawable/button_shape"
                android:entries="@array/department"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorType"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/button_shape"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etEmail"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="password"
                android:background="@drawable/button_shape"
                android:hint="Password"
                android:inputType="numberPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPass"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:autofillHints="phone"
                android:background="@drawable/button_shape"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />


            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etPhone"
                android:layout_marginHorizontal="70dp"
                android:layout_marginVertical="15dp"
                android:backgroundTint="#7CB5E6"
                android:backgroundTintMode="src_in"
                android:shadowColor="#DC6D8FAE"
                android:shadowDx="0"
                android:shadowDy="7"
                android:shadowRadius="1"
                android:text="Register"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/SampleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSignUp"
                android:layout_margin="20dp"
                android:gravity="left"
                android:paddingLeft="20dp"
                android:text="Already have an account ? "
                android:textSize="18sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSignUp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@id/SampleText"
                android:backgroundTint="#7CB5E6"
                android:padding="5dp"
                android:text="LogIN"
                android:textColor="@color/white" />


        </RelativeLayout>

    </RelativeLayout>

</ScrollView>