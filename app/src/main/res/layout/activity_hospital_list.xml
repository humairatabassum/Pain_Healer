<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF3F6"
    android:orientation="vertical"
    tools:context=".HospitalListActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:shadowColor="#303D8A"
            android:layout_gravity="center"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Search Hospital"
            android:textColor="#2A96CA"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/img1"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="You can get appointment from the hospital you want"
            android:textColor="#E445C1EF"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:visibility="visible">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:gravity="center"
            android:text="Hospital name :"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textSize="15.5sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/HospName"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_below="@id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Address :"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textSize="15.5sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/address"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:layout_marginRight="10dp"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Phone Number :"
            android:layout_marginLeft="25dp"
            android:textStyle="bold"
            android:textSize="15.5sp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/etPhoneNum"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:inputType="phone"
            />
    </LinearLayout>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll3"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:backgroundTint="#89BCE8"
            android:text="Add Hospital"
            android:textSize="12sp" />

    </RelativeLayout>

